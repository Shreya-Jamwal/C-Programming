#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int N, x, y, z, p, q, r, s, t;
    scanf("%d", &N);
    x = N/500;
    N = N%500;
    y = N/100;
    N = N%100;
    z = N/50;
    N = N%50;
    p = N/20;
    N = N%20;
    q = N/10;
    N = N%10;
    r = N/5;
    N = N%5;
    s = N/2;
    N = N%2;
    t = N;
    
   if (x !=0)printf("500: %d\n", x);
   if (y !=0)printf("100: %d\n", y);
   if (z !=0)printf("50: %d\n", z);
   if (p !=0)printf("20: %d\n", p);
   if (q !=0)printf("10: %d\n", q);
   if (r !=0)printf("5: %d\n", r);
   if (s !=0)printf("2: %d\n", s);
   if (t !=0)printf("1: %d", t);
    return 0;
}
